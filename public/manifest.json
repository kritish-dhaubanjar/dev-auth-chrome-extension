{
  "name": "Dev Auth Extension",
  "description": "Auth Extension for dev.vyaguta.lftechnology.com",
  "version": "1.3.0",
  "manifest_version": 3,
  "icons": {
    "16": "./assets/icons/16x16.png",
    "32": "./assets/icons/32x32.png",
    "48": "./assets/icons/48x48.png",
    "64": "./assets/icons/64x64.png",
    "128": "./assets/icons/128x128.png"
  },
  "options_page": "./options.html",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "./js/background.js",
    "type": "module"
  },
  "permissions": ["tabs", "cookies", "storage", "scripting", "activeTab"],
  "host_permissions": [
    "http://localhost/",
    "http://127.0.0.1/",
    "*://*.vyaguta.lftechnology.com/",
    "*://*.vyaguta.lftechnology.com.np/",
    "*://*.intranet.lftechnology.com.np/",
    "*://*.intranet.lftechnology.com/"
  ]
}
